                     style={`background-image: url(${backgroundMain.src});
								 background-size: cover;
								 background-position: center;
								 height: 400px;`}>
                    <div class="d-flex flex-column justify-content-center align-items-center h-100 w-100">
                        <img src={component2.src} alt="Background" class="img-fluid rounded position-absolute" style="left: -42px; z-index: -1; width: 89%;">
                        <img src={brMain.src} alt="Description" class="img-fluid rounded">
                    </div>
                </div>


                <!-- Text Section -->
                <div class="col-md-9" style="text-align: center;">
                    <h2 class="fw-bold mb-3 display-5">Microsoft 365 Data Protection</h2>
