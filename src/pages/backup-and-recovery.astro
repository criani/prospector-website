---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';

import backgroundMain from '../assets/backgroundMain.svg';
import magnifyingLaptop from '../assets/magnifying-laptop.png';
import moneyShield from '../assets/money-shield.png';
import dashboard from '../assets/dashboard.png';
import w247 from '../assets/247.png';
import talk from '../assets/talk.png';
import addOn from '../assets/add-on.png';
import brMain from '../assets/brMain.png';
import component2 from '../assets/component2.svg';
import laptopBadge from '../assets/laptop-badge.png';
import cloud from '../assets/cloud.png';
import backup from '../assets/backup.png';
import disaster from '../assets/disaster.png';
import local from '../assets/local.png';
import health from '../assets/health.png';
import file from '../assets/file.png';
import guide from '../assets/guide.png';
import downtime from '../assets/downtime.png';
import architecture from '../assets/architecture.png';
import safeguard from '../assets/safeguard.png';
---

<Layout>
    <Header />

    <section class="py-3 bg-light">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-6 mx-auto">
                    <h1 class="display-4 fw-bold" style="font-size: 64px; line-height: 79px;">Backup and Disaster Recovery</h1>
                    <div class="mt-4">
                        <p class="fw-bold" style="font-size: 24px; line-height: 29px; color: #2A2B2C">
                            Exceptional Value •   24/7 Protection  •  Streamlined Support  •  Future-Ready
                        </p>
                    </div>
                </div>
                <div class="col-6 mx-auto d-flex justify-content-center py-5" style="color: #0B232B; background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%); border-radius: 20px;">
                    <div
                            class="col-md-12 mb-4 mb-md-0"
                    >
                        <p class="fs-5">
                            Unexpected events, like hardware failure or natural disasters, can<span class="mark"> strike without warning</span>. Prospector’s <span class="fw-bold">Backup and Disaster Recovery</span> services helps your business bounce back quickly, maintain smooth operations, and protect what matters most. Instead of worrying about technical details, you can focus on running and growing your business, <span class="mark">confident</span> that your data and <span class="mark">systems are safe</span>.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-3" style="background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%);">
