---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';

import homeHero from '../assets/homeHero.svg';
import homeSecondary from '../assets/homeSecondary.svg';
import cardImg1 from '../assets/cardImg1.png';
import cardImg2 from '../assets/cardImg2.png';
import cardImg3 from '../assets/cardImg3.svg';
import cardImg4 from '../assets/cardImg4.png';
import backgroundMain from '../assets/backgroundMain.svg';

---

<Layout>
	<Header />
	<section class="fade-in-up">
		<div class="container">
		  <div class="row align-items-center">
			<!-- Text Section -->
			<div class="col-md-6 mb-5">
			  <h1 class="main-h1">Stay Secure, Stay Productive</h1>
			  <p class="lead">
				<span class="mark">Expert protection for only <strong>$18 a month*</strong></span> through comprehensive assessments, program development, and world-class Managed Security Services <span>tailored to you</span> and your organization’s needs.
			  </p>
			  <p class="lead">
				Being <span class="mark">protected by Prospector</span> lets you focus on your core business while we keep your team secure.
			  </p>
			  <a href="#" class="btn btn-hero btn-lg">
				Get Started
				<svg
				  xmlns="http://www.w3.org/2000/svg"
				  width="22"
				  height="22"
				  fill="currentColor"
				  class="bi bi-arrow-right-circle align-middle ms-2"
				  viewBox="0 0 16 16"
				>
				  <path
					fill-rule="evenodd"
					d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"
				  />
				</svg>
			  </a>
			</div>
			
			<!-- Image Section -->
			<div class="col-md-6 text-center">
			  <div>
				<img src={homeHero.src} alt="Secure Your Business" class="img-fluid rounded">
			  </div>
			</div>
		  </div>
		</div>
	  </section>

	  <section>
		<div class="container">
		  <div class="row">
			<!-- Text Section -->
			<div class="col-md-12">
			  <h2 class="fw-bold mb-4" style="font-size: 55px;">The Prospector Difference</h2>
			  <p style="font-size: 18px;">
				Meet your unique needs with Prospector's expert On-Demand Security Consulting in<br> cybersecurity, risk management, and regulatory compliance. Access to customized, ongoing,<br> managed services lets you collaborate with Prospector further. Prospector becomes part of<br> your team providing concrete steps to enhance your security while keeping it as valuable and<br> cost-effective as possible.
			  </p>
			</div>
		  </div>
		</div>
	  </section>

	  <section class="py-5">
		<div class="container-xl" style="background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%);">
		  <div class="row align-items-center">
			<!-- Text Section -->
			<div class="col-md-6">
			  <h2 style="font-size: 24px;"><span class="fw-bold">Full stack</span> security, <span class="fw-bold mark">fully managed</span> to eliminate a breach.</h2>
			  <p class="mt-3">
				Prospector's mission is simple: we help your IT team move beyond traditional<br> security by providing proactive security services.
			  </p>
			</div>
	  
			<!-- Image Section -->
			<div class="col-md-6 text-center">
			  <img 
				src={homeSecondary.src} 
				alt="Proactive Security Services" 
				class="img-fluid"
				style="margin-top: -160px;"
			  />
			</div>
		  </div>
		</div>
	  </section>

	  <section class="py-5">
		<div class="container text-center">
		  <div class="row g-4">
			<!-- Card 1 -->
			<div class="col-lg-3 col-md-6 fade-in-up delay-1">
			  <div class="card border-0 shadow" style="background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%);
height: 354px;">
				<div class="position-relative">
				  <img
					src={cardImg1.src}
					alt="Card 1 Image"
					class=""
					style="margin-top: -30px;"
					width="191"
				  />
				</div>
				<div class="card-body">
				  <h5 style="font-size: 24px; line-height: 29px;"><span class="fw-bold">75% increase</span> in cloud environment intrusions* </h5>
				  <p style="font-size: 18px; line-height: 22px;">
					Prospector's top-to-bottom security protects your cloud environments from threats.
				  </p>
				</div>
			  </div>
			</div>
	  
			<!-- Card 2 -->
			<div class="col-lg-3 col-md-6 fade-in-up delay-2">
				<div class="card border-0 shadow" style="background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%);
height: 354px;">
				  <div class="position-relative">
					<img
					  src={cardImg2.src}
					  alt="Card 1 Image"
					  class=""
					  style="margin-top: -30px;"
						width="191"
					/>
				  </div>
				  <div class="card-body">
					<h5 style="font-size: 24px; line-height: 29px;"><span class="fw-bold">Decades of experience</span> in world class protection</h5>
					<p style="font-size: 18px; line-height: 22px;">
						Propsector protects your critical infrastructure using deep industry experience custom to your needs.					</p>
				  </div>
				</div>
			  </div>
	  
			<!-- Card 3 -->
			<div class="col-lg-3 col-md-6 fade-in-up delay-1">
				<div class="card border-0 shadow" style="background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%);
height: 354px;">
				  <div class="position-relative">
					<img
					  src={cardImg3.src}
					  alt="Card 1 Image"
					  class=""
					  style="margin-top: -30px;"
					/>
				  </div>
				  <div class="card-body">
					<h5 style="font-size: 24px; line-height: 29px;"><span class="fw-bold">2 - 62min</span> to move from one breach to another*</h5>
					<p style="font-size: 18px; line-height: 22px;">
						Ongoing tool management and organizational monitoring identifies a threat in real-time.					</p>
				  </div>
				</div>
			  </div>

						<!-- Card 4 -->
						<div class="col-lg-3 col-md-6 fade-in-up delay-2">
							<div class="card border-0 shadow" style="background: linear-gradient(180deg, #F3F3F4 48.5%, #EAFBFF 100%);
			height: 354px;">
							  <div class="position-relative">
								<img
								  src={cardImg4.src}
								  alt="Card 1 Image"
								  class=""
								  style="margin-top: -30px;"
									width="191"
								/>
							  </div>
							  <div class="card-body">
								<h5 style="font-size: 24px; line-height: 29px;"><span class="fw-bold">Instant protection.</span> Instant value. </h5>
								<p style="font-size: 18px; line-height: 22px;">
									Prospector empowers you,  overseeing tool management and fast tracking a path to framework aligned cybersecurity. 					</p>
							  </div>
							</div>
						  </div>
		  </div>
		</div>
	  </section>

	  <section class="py-3">
		<div class="container">
		  <div class="row justify-content-center">
			<div class="col-auto">
			  <a href="#" class="btn btn-hero2 btn-lg d-inline-flex align-items-center">
				More About Prospector
				<svg
				  xmlns="http://www.w3.org/2000/svg"
				  width="22"
				  height="22"
				  fill="currentColor"
				  class="bi bi-arrow-right-circle align-middle ms-2"
				  viewBox="0 0 16 16"
				>
				  <path
					fill-rule="evenodd"
					d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"
				  />
				</svg>
			  </a>
			</div>
		  </div>
		</div>
	  </section>

	  <section class="py-5">
		<div class="container">
		  <div class="row align-items-center">
			<!-- Image Section -->
			<div
				class="col-md-5 position-relative text-center"
				style={`background-image: url(${backgroundMain.src}); background-size: cover; background-position: center; height: 400px;`}
				>
				<div class="d-flex flex-column h-100">
					<!-- Top Left Text -->
					<div class="text-start fw-bold" style="font-size: 36px; line-height: 36px; text-align: left;">
					Foundations<br>Package
					</div>

					<!-- Center Center Text -->
					<div class="text-center">
						<div class="">
							<span class="display-4 fw-bold">$<span class="super" style="font-size: 128px;">18</span></span>
							<span class="fw-bold" style="font-size: 40px; line-height: 40px; text-align: left;">per month</span>
						</div>
					</div>

					<!-- Bottom Center Text -->
					<div class="text-center fw-bold" style="font-size: 24px; line-height: 29px;">
					All Tools Included • Fully Managed •<br> Single Source for Security • Top to Bottom Protection
					</div>
				</div>
				</div>
	  
			<!-- Text Section -->
			<div class="col-md-7">
			  <h2 class="fw-bold mb-3" style="font-size: 55px; line-height: 66px;">Ready for Protection by Prospector?</h2>
			  <p class="py-2">
				Get started today with our Foundations package for only <strong>$18 per month*</strong>. Or learn more about our increased protection packages to align with your unique needs.
			  </p>
			  <a href="#" class="btn btn-hero btn-lg d-inline-flex align-items-center">
				Start With Foundations
				<svg
				  xmlns="http://www.w3.org/2000/svg"
				  width="22"
				  height="22"
				  fill="currentColor"
				  class="bi bi-arrow-right-circle align-middle ms-2"
				  viewBox="0 0 16 16"
				>
				  <path
					fill-rule="evenodd"
					d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"
				  />
				</svg>
			  </a>
			  <a href="#" class="btn btn-hero2 btn-lg d-inline-flex align-items-center">
				See All Benefits
				<svg
				  xmlns="http://www.w3.org/2000/svg"
				  width="22"
				  height="22"
				  fill="currentColor"
				  class="bi bi-arrow-right-circle align-middle ms-2"
				  viewBox="0 0 16 16"
				>
				  <path
					fill-rule="evenodd"
					d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8m15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"
				  />
				</svg>
			  </a>
	  
			  <p class="fw-bold pt-4" style="font-size: 24px;">
				Still want more information?<br />
			  </p>
			  <p class="py-2">
				<a href="#" style="color: #427587;">Contact us</a> for an in-depth conversation, demo, or even just to answer your questions on how we can partner with you. <a href="#" style="color: #427587;">Prospector FAQs</a> are also a great place to learn more.
			  </p>
			</div>
		  </div>
		</div>
	  </section>

</Layout>

<style>
	/* Example fade-in-up keyframes */
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	/* Utility class to trigger the animation */
	.fade-in-up {
		opacity: 0; /* Ensures the element is hidden before animation starts */
		animation: fadeInUp 1s ease-in-out forwards; /* 1s is the duration */
	}

	/* If you want to add a delay to certain elements, you can create variants */
	.fade-in-up.delay-1 {
		animation-delay: 0.25s; /* quarter second delay */
	}
	.fade-in-up.delay-2 {
		animation-delay: 0.5s;
	}

	/* The rest of your existing styles remain unchanged */
	.main-h1 {
		font-family: Kumbh Sans;
		font-size: 64px;
		font-weight: 800;
		line-height: 79.38px;
		text-align: left;
		text-underline-position: from-font;
		text-decoration-skip-ink: none;
	}

	.lead {
		font-family: Kumbh Sans;
		font-size: 24px;
		font-weight: 500;
		line-height: 29.77px;
		text-align: left;
		text-underline-position: from-font;
		text-decoration-skip-ink: none;
	}
	.mark {
		background-color: #bbd758a3;
		border-radius: 20px;
	}
	.btn-hero {
		background-color: #bbd758;
		color: #0b232b;
		font-family: "Kumbh Sans", sans-serif;
		font-size: 22px;
		font-weight: 700;
		line-height: 27.29px;
		text-align: left;
		text-underline-position: from-font;
		text-decoration-skip-ink: none;
		border-radius: 3px;
		padding: 10px 20px;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem; /* Extra spacing between text and icon if needed */
	}
	.btn-hero2 {
		background-color: #ffffff;
		color: #0b232b;
		border: 2px solid #bbd758;
		font-family: "Kumbh Sans", sans-serif;
		font-size: 22px;
		font-weight: 700;
		line-height: 27.29px;
		text-align: left;
		text-underline-position: from-font;
		text-decoration-skip-ink: none;
		border-radius: 3px;
		padding: 10px 20px;
		display: inline-flex;
		align-items: center;
		gap: 0.5rem; /* Extra spacing between text and icon if needed */
	}
</style>
